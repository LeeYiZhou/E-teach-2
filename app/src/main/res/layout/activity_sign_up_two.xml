<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="90dp"
    tools:context="com.example.antony.myapplication.sign.SignInActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_sign_up_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E - T e a c h"
        android:textSize="12sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="医 途 唇 腭 裂 手 术 系 统"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:paddingLeft="5dp"
        android:background="@drawable/bg_gray_rounded_rectangle"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="@color/background_color"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入用户名"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:layout_marginLeft="70dp"
            android:textColor="@color/background_color"
            android:textColorHint="@color/background_color"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="5dp"
        android:background="@drawable/bg_gray_rounded_rectangle"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入密码"
            android:textColor="@color/background_color"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/password_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入注册密码"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:layout_marginLeft="70dp"
            android:inputType="textPassword"
            android:textColor="@color/background_color"
            android:textColorHint="@color/background_color"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="5dp"
        android:background="@drawable/bg_gray_rounded_rectangle"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/background_color"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/password_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="确认注册密码"
            android:background="@color/transparent"
            android:textSize="14sp"
            android:layout_marginLeft="70dp"
            android:textColor="@color/background_color"
            android:inputType="textPassword"
            android:textColorHint="@color/background_color"/>

    </RelativeLayout>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_red_rounded_rectangle"
        android:layout_marginTop="40dp"
        android:text="注 册"
        android:textSize="17sp"
        android:textColor="@color/background_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#B7E1F3"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册则代表同意"
            android:textColor="@color/hint_gray"
            android:textSize="11sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用条款"
            android:textColor="#B7E1F3"
            android:textSize="11sp"
            />
    </LinearLayout>

</LinearLayout>
