<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antony.myapplication.sign.ForgetThreeActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_opetation_simulation"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输 入 验 证 码"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15928779089"
            android:textColor="@color/gray"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="60秒"
            android:textSize="13sp"
            android:textColor="@color/gray"/>
    </LinearLayout>

    <com.example.antony.myapplication.util.SecurityCodeView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.example.antony.myapplication.util.SecurityCodeView>


</LinearLayout>
