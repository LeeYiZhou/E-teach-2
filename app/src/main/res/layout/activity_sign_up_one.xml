<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="80dp"
    tools:context="com.example.antony.myapplication.sign.SignInActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_sign_up_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E - T e a c h"
        android:textSize="12sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="医 途 唇 腭 裂 手 术 系 统"
        android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:background="@drawable/bg_gray_rounded_rectangle"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@mipmap/ic_phone"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入手机号码"
                android:background="@color/transparent"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:inputType="phone"
                android:textColor="@color/background_color"
                android:textColorHint="@color/background_color"
                android:maxLength="11"/>

        </LinearLayout>

        <Button
            android:id="@+id/send"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:text="发 送"
            android:textColor="@color/background_color"
            android:background="@drawable/bg_red_rounded_rectangle" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:background="@drawable/bg_gray_rounded_rectangle"
            android:gravity="center">



            <EditText
                android:id="@+id/verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="输入验证码"
                android:background="@color/transparent"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/background_color"
                android:textColorHint="@color/background_color"/>

        </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:text="验 证 码" />

    </RelativeLayout>

    <Button
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_red_rounded_rectangle"
        android:layout_marginTop="40dp"
        android:text="确 定"
        android:textSize="17sp"
        android:textColor="@color/background_color"/>

</LinearLayout>
