<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:paddingTop="90dp"
    tools:context="com.example.antony.myapplication.sign.SignInActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_hi"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E - T e a c h"
        android:textSize="14sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="医 途 唇 腭 裂 手 术 系 统"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_gray_rounded_rectangle"
        android:padding="3dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_phone"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入手机号码"
            android:background="@color/transparent"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:inputType="phone"
            android:textColor="@color/background_color"
            android:textColorHint="@color/background_color"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_gray_rounded_rectangle"
        android:padding="3dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_lock"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入登录密码"
            android:background="@color/transparent"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:inputType="textPassword"
            android:textColor="@color/background_color"
            android:textColorHint="@color/background_color"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/gray"
            android:textSize="13sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/txt_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#B7E1F3"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/txt_face_recog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人脸识别"
                android:textColor="@color/gray"
                android:textSize="13sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户注册"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            android:textSize="13sp"/>


    </RelativeLayout>
    
    <Button
        android:id="@+id/sign_in"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_red_rounded_rectangle"
        android:layout_marginTop="35dp"
        android:text="登 录"
        android:textSize="17sp"
        android:textColor="@color/background_color"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/img_qq"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_qq"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/weibo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_weibo"
            android:layout_toLeftOf="@id/img_qq"
            android:layout_marginRight="25dp"/>

        <ImageView
            android:id="@+id/weixin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_wechat"
            android:layout_toRightOf="@id/img_qq"
            android:layout_marginLeft="25dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="#B7E1F3"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他方式登录"
                android:textColor="@color/gray"
                android:textSize="13sp"

                />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/bottom_view"
        android:layout_gravity="bottom"
        />
</LinearLayout>
