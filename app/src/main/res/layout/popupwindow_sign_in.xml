<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@mipmap/bg_colorful"
    android:gravity="center">

    <Button
        android:id="@+id/find"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:textColor="@color/background_color"
        android:background="@drawable/bg_red_rounded_rectangle_1"
        android:text="找回密码" />

    <Button
        android:layout_width="150dp"
        android:layout_marginLeft="20dp"
        android:layout_height="35dp"
        android:textColor="@color/background_color"
        android:background="@drawable/bg_red_rounded_rectangle_1"
        android:text="短信验证登录"
        android:id="@+id/verification"
        android:layout_toRightOf="@id/find"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_below="@id/verification"
        android:background="@drawable/bg_white_rounded_rectangle_2"
        android:layout_marginTop="15dp"
        android:text="取 消"
        android:textColor="@color/light_red"/>

</RelativeLayout>