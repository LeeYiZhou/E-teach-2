<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antony.myapplication.path.OutcomeDisplayPathPathActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/light_red"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title=" "
        > <!-- 设置HomeAsUp按钮的图案-->

        <!-- theme制定为 Light.NoActionBar 可以制定为深色字体-->
        <!-- 写title 要用app:title-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textColor="@color/background_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择图片"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="19sp"
                />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_red">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="编辑图片"
                android:textSize="19sp"
                android:textColor="@color/background_color" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="导入图片"
                android:textSize="19sp"
                android:textColor="@color/background_color" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_bar"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/case_img_layout"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true">

            <View
                android:id="@+id/left_side"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/light_red"
                android:layout_alignParentLeft="true"/>

            <View
                android:id="@+id/right_side"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/light_red"
                android:layout_alignParentRight="true"/>

            <View
                android:id="@+id/top_side"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_red"
                android:layout_alignParentTop="true"/>

            <View
                android:id="@+id/bottom_side"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_red"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/top_side"
                android:layout_toRightOf="@id/left_side"
                android:layout_toLeftOf="@id/right_side"
                android:layout_above="@id/bottom_side"
                android:scaleType="centerCrop"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_plus"
            android:layout_below="@id/case_img_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

</RelativeLayout>
